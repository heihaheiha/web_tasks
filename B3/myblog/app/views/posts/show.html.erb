<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Time:</strong>
  <%= @post.created_at %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<h4>COmments</h4>
<%= @post.comments.each do |comment| %>
  <p>
    <strong>name:</strong>
    <%= comment.name %>
  </p>

  <p>
    <strong>email:</strong>
    <%= comment.email %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= comment.created_at %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= @comment.text %>
  </p>
<% end %>

<h4>Add a comment:</h4>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :email %>
  <%= f.text_field :email %>
</p>

<p>
  <%= f.label :text %>
  <%= f.text_area :text %>
</p>

<p>
  <%= f.hidden_field :status,:value => "0" %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>

<%= link_to 'Back', posts_path %>
